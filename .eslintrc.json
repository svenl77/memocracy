{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "child_process",
            "message": "Use safer alternatives instead of spawning child processes."
          }
        ]
      }
    ]
  }
}
