# Database
# For development (SQLite):
DATABASE_URL="file:./dev.db"
# For production (PostgreSQL/MySQL):
# DATABASE_URL="postgresql://user:password@host:5432/dbname"
# or
# DATABASE_URL="mysql://user:password@host:3306/dbname"

# JWT Secret (MUST be at least 32 characters long)
# Generate with: openssl rand -base64 32
JWT_SECRET="replace-with-strong-secret-min-32-characters-long"

# Node Environment
NODE_ENV="development"

# Optional: Solana RPC URL (defaults to public mainnet)
# SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"

# Optional: Solana Vote Program ID (for on-chain voting)
# Set this after deploying the Anchor program
# SOLANA_VOTE_PROGRAM_ID="your_program_id_here"

# Optional: Cron secret for background jobs
# CRON_SECRET="your-cron-secret-token"

# Optional: Allowed origin for CORS (defaults to *)
# ALLOWED_ORIGIN="https://yourdomain.com"

# Optional: Log level (error, warn, info, debug)
# LOG_LEVEL="info"

# Optional: Admin Token (for admin functions like hiding/deleting coins)
# ADMIN_TOKEN="your-admin-secret-token"

# Optional: Admin Wallets (comma-separated list of wallet addresses)
# ADMIN_WALLETS="wallet1,wallet2,wallet3"

# Bags API Integration
# Get your API key from: https://dev.bags.fm
BAGS_API_KEY="your_bags_api_key_here"
BAGS_API_BASE_URL="https://public-api-v2.bags.fm/api/v1"

# Memocracy Platform Wallet (receives 3% of all Bags Coin fees)
MEMOCRACY_PLATFORM_WALLET="your_platform_wallet_address_here"
MEMOCRACY_PLATFORM_FEE_PERCENTAGE="0.03"

# Bags Fee Sync Interval (in milliseconds, default: 1 hour)
# BAGS_FEE_SYNC_INTERVAL="3600000"
